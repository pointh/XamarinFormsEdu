<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="AppShell.TeachersPage">

    <StackLayout>
        <Frame BackgroundColor="DarkOliveGreen" Padding="24" CornerRadius="0">
            <Label Text="Učitelé" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <ListView x:Name="TeachersListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Degree}" TextColor="Black" BackgroundColor="AliceBlue" VerticalOptions="Center"/>
                            <Label Text="{Binding Name}" TextColor="White" BackgroundColor="Black" VerticalOptions="Center" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="AddButton" Text="Přidej" Clicked="AddButton_Clicked"/>
    </StackLayout>

</ContentPage>
