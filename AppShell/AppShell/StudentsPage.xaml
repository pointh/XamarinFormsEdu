<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppShell.StudentsPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label" x:Key="StudentLabel">
                <Setter Property="FontSize" Value="Title"/>
                <Setter Property="Padding" Value="30, 10, 30, 10"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <StackLayout>
        <Frame BackgroundColor="LightYellow" Padding="24" CornerRadius="0">
            <Label Text="Studenti" HorizontalTextAlignment="Center" TextColor="LawnGreen" FontSize="36"/>
        </Frame>
        <Label Text="Novák 1.A"  Style="{StaticResource StudentLabel}"/>
        <Label Text="Horák 1.A"  Style="{StaticResource StudentLabel}"/>
        <Label Text="Slovák 1.A" Style="{StaticResource StudentLabel}"/>
        <Label Text="Polák 1.A"  Style="{StaticResource StudentLabel}"/>
        <Label Text="Winterspoon 2.A" Style="{StaticResource StudentLabel}"/>
    </StackLayout>

</ContentPage>
